<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <resource type="i18n" name="i18n" location="se.microcode.${project.artifactId}.i18n.AtlassianPlugin"/>
    <resource type="velocity" name="css-fix.vm" location="se/microcode/${project.artifactId}/css-fix.vm"/>

    <!-- picasa -->

    <macro name="picasa-gallery" class="${project.groupId}.picasa.GalleryMacro" key="picasa-gallery">
        <description>Display galleries from Picasa</description>
        <category name="external-content"/>
    </macro>

    <xhtml-macro name="Picasa Gallery" class="${project.groupId}.xhtml.picasa.GalleryMacro" key="picasa-gallery-xhtml">
        <description>Display galleries from Picasa</description>
        <category name="external-content"/>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="pageSize" type="int" default="-1"/>
            <parameter name="imageSize" type="int" default="640"/>
            <parameter name="thumbnails" type="int" default="5"/>
        </parameters>
    </xhtml-macro>

    <macro name="Picasa Gallery Excerpts" class="${project.groupId}.wiki.picasa.GalleryExcerptsMacro" key="picasa-gallery-excerpts">
        <description>Mini-gallery displaying a set number of items from Picasa</description>
        <category name="external-content"/>
    </macro>

    <xhtml-macro name="picasa-gallery-excerpts" class="${project.groupId}.xhtml.picasa.GalleryExcerptsMacro" key="picasa-gallery-excerpts-xhtml">
        <description>Mini-gallery displaying a set number of items from Picasa</description>
        <category name="external-content"/>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="album" type="string"/>
            <parameter name="maxEntries" type="string" default="5"/>
            <parameter name="thumbSize" type="int" default="0"/>
            <parameter name="photo" type="string"/>
            <parameter name="randomize" type="boolean"/>
            <parameter name="page" type="string"/>
        </parameters>
    </xhtml-macro>

    <resource type="velocity" name="albums.vm" location="se/microcode/${project.artifactId}/picasa/albums.vm"/>
    <resource type="velocity" name="photos.vm" location="se/microcode/${project.artifactId}/picasa/photos.vm"/>
    <resource type="velocity" name="photo.vm" location="se/microcode/${project.artifactId}/picasa/photo.vm"/>
    <resource type="velocity" name="photos-excerpts.vm" location="se/microcode/${project.artifactId}/picasa/photos-excerpts.vm"/>
    <resource type="velocity" name="albums-excerpts.vm" location="se/microcode/${project.artifactId}/picasa/albums-excerpts.vm"/>

    <web-resource key="picasa-gallery-resources">
        <resource type="download" name="style.css" location="se/microcode/${project.artifactId}/picasa/style.css">
            <property key="content-type" value="text/css"/>
        </resource>

        <resource type="download" name="images/" location="se/microcode/${project.artifactId}/picasa/images/"/>
    </web-resource>

    <!-- youtube -->

    <macro name="Youtube Playlists" class="${project.groupId}.wiki.youtube.PlaylistMacro" key="youtube-playlists">
        <description>Display playlists from Youtube</description>
    </macro>

    <macro name="Youtube Playlist Excerpts" class="${project.groupId}.wiki.youtube.PlaylistExcerptsMacro" key="youtube-playlist-excerpts">
        <description>Mini display of youtube videos (inlined)</description>
    </macro>

    <xhtml-macro name="Youtube Playlists" class="${project.groupId}.xhtml.youtube.PlaylistMacro" key="youtube-playlists-xhtml">
        <description>Display playlists from Youtube</description>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="pageSize" type="int" default="-1"/>
            <parameter name="thumbnails" type="int" default="5"/>
            <parameter name="reverse" type="boolean" default="false"/>
        </parameters>
    </xhtml-macro>

    <xhtml-macro name="Youtube Playlist Excerpts" class="${project.groupId}.xhtml.youtube.PlaylistExcerptsMacro" key="youtube-playlist-excerpts-xhtml">
        <description>Mini display of youtube videos (inlined)</description>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="playlist" type="string"/>
            <parameter name="maxEntries" type="int" default="5"/>
            <parameter name="randomize" type="boolean"/>
            <parameter name="page" type="string"/>
        </parameters>
    </xhtml-macro>

    <resource type="velocity" name="playlists.vm" location="se/microcode/${project.artifactId}/youtube/playlists.vm"/>
    <resource type="velocity" name="playlist.vm" location="se/microcode/${project.artifactId}/youtube/playlist.vm"/>
    <resource type="velocity" name="playlist-excerpts.vm" location="se/microcode/${project.artifactId}/youtube/playlist-excerpts.vm"/>
    <resource type="velocity" name="playlists-excerpts.vm" location="se/microcode/${project.artifactId}/youtube/playlists-excerpts.vm"/>

    <web-resource key="youtube-playlist-resources">
        <resource type="download" name="style.css" location="se/microcode/${project.artifactId}/youtube/style.css">
            <property key="content-type" value="text/css"/>
        </resource>
        <resource type="download" name="images/" location="se/microcode/${project.artifactId}/youtube/images/"/>
    </web-resource>

    <!-- blogger -->

    <macro name="Blogger Posts" class="${project.groupId}.wiki.blogger.BloggerMacro" key="blogger-posts">
        <description>Display Blogger posts</description>
        <category name="external-content"/>
    </macro>

    <xhtml-macro name="Blogger Posts" class="${project.groupId}.xhtml.blogger.BloggerMacro" key="blogger-posts-xhtml">
        <description>Display Blogger posts</description>
        <category name="external-content"/>
        <parameters>
            <parameter name="id" type="string"/>
            <parameter name="labels" type="string" multiple="true"/>
            <parameter name="images" type="enum" default="on">
                <value name="on"/>
                <value name="off"/>
                <value name="gallery"/>
            </parameter>
            <parameter name="timestamp" type="boolean" default="false"/>
            <parameter name="count" type="int" default="0"/>
            <parameter name="reverse" type="boolean"/>
            <parameter name="header" type="string" default="h5"/>
            <parameter name="width" type="int" default="320"/>
            <parameter name="timeout" type="int" default="3600"/>
        </parameters>
    </xhtml-macro>

    <resource type="velocity" name="posts.vm" location="se/microcode/${project.artifactId}/blogger/posts.vm"/>

</atlassian-plugin>
