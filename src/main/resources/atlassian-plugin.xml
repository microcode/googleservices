<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <resource type="i18n" name="i18n" location="se.microcode.picasa-gallery-plugin.i18n.AtlassianPlugin"/>

    <macro name="picasa-gallery" class="${project.groupId}.picasa.GalleryMacro" key="picasa-gallery">
        <description>Display galleries from Picasa</description>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="pageSize" type="int" default="-1"/>
            <parameter name="imageSize" type="int" default="640"/>
            <parameter name="thumbnails" type="int" default="5"/>
        </parameters>
    </macro>

    <macro name="picasa-gallery-excerpts" class="${project.groupId}.picasa.GalleryExcerptsMacro" key="picasa-gallery-excerpts">
        <description>Mini-gallery displaying a set number of items from Picasa</description>
        <parameters>
            <parameter name="user" type="string" required="true"/>
            <parameter name="maxEntries" type="int" default="5"/>
            <parameter name="thumbSize" type="int" default="0"/>
            <parameter name="photo" type="string"/>
            <parameter name="randomize" type="boolean"/>
            <parameter name="page" type="string"/>
        </parameters>
    </macro>

    <resource type="download" name="images/" location="se/microcode/picasa-gallery-plugin/images/"/>

    <resource type="velocity" name="albums.vm" location="se/microcode/picasa-gallery-plugin/albums.vm"/>
    <resource type="velocity" name="photos.vm" location="se/microcode/picasa-gallery-plugin/photos.vm"/>
    <resource type="velocity" name="photo.vm" location="se/microcode/picasa-gallery-plugin/photo.vm"/>
    <resource type="velocity" name="photos-excerpts.vm" location="se/microcode/picasa-gallery-plugin/photos-excerpts.vm"/>

    <web-resource key="picasa-gallery-resources">
        <resource type="download" name="style.css" location="se/microcode/picasa-gallery-plugin/style.css">
            <property key="content-type" value="text/css"/>
        </resource>
    </web-resource>

</atlassian-plugin>
